@model IEnumerable<LibApp.Models.BorrowView>

@{
    ViewBag.Title = "Index";
}

    <h2>Historia wypożyczeń</h2>
    @using (Html.BeginForm(FormMethod.Get))
    {
        <p>
            Szukaj kienta: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @style = "color:black" })
            <input class="btn-warning" type="submit" value="Szukaj" />
        </p>
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Books.Tytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.borrowHistories.BorrowDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.borrowHistories.ReturnDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Books.Tytul)
                </td>

                <td>@Html.DisplayFor(modelItem => item.Customers.Imie)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.borrowHistories.BorrowDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.borrowHistories.ReturnDate)
                </td>

            </tr>
        }


    </table>

    @Html.ActionLink("Powrót do wypożyczeń", "Index", "Books")
